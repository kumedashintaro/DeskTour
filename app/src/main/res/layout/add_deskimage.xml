<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <Button
        android:id="@+id/selectophoto_desk_button"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_selectdesk"
        android:text="画像を選択して下さい。"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/selectdeskphoto_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_selectdesk"
        app:layout_constraintBottom_toBottomOf="@+id/selectophoto_desk_button"
        app:layout_constraintEnd_toEndOf="@+id/selectophoto_desk_button"
        app:layout_constraintStart_toStartOf="@+id/selectophoto_desk_button"
        app:layout_constraintTop_toTopOf="@+id/selectophoto_desk_button"
        app:srcCompat="@drawable/rounded_selectphoto"
        android:scaleType="fitCenter"
        />


</androidx.constraintlayout.widget.ConstraintLayout>